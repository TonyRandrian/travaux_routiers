rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permettre à tout utilisateur authentifié de lire, créer, mettre à jour et supprimer ses propres données utilisateur
    match /users/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Signalements - lecture et création pour tous les utilisateurs authentifiés
    match /signalements/{document=**} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Autres collections au besoin
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
